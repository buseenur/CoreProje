@using EntityLayer.Concrete
@model List<Message>
@{
    Layout = "/Views/Shared/_NewAdminLayout.cshtml";
    ViewData["Title"] = "Index";
}

            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">İletişim Kutusu</h4>
                        <div class="table-responsive">
                            <table class="table">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>#</th>
                                        <th>Gönderen</th>
                                        <th>Tarih</th>
                                        <th>Sil</th>
                                        <th>Mesajı Gör</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.MessageID</td>
                                            <td>@item.Name</td>
                                            <td>@item.Date</td>
                                            <td><a href="/ContactMessage/DeleteContact/@item.MessageID" class="btn btn-outline-danger">Sil</a></td>
                                            <td><a href="/ContactMessage/DetailsContact/@item.MessageID" class="btn btn-outline-info">Mesajı Gör</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
